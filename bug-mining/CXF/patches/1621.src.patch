+    public class EnumObject<E extends Enum<E>> {
+        private String name;
+
+        public String getName() {
+            return name;
+        }
+
+        public void setName(String param) {
+            this.name = param;
+        }
+    }
+
+    public class EnumTest {
+        public <T extends Enum<T>> EnumObject<T> test(EnumObject<T> o) {
+            return o;
+        }
+    }
