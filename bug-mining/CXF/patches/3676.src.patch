+        InputStream is = getClass().getClassLoader()
+            .getResourceAsStream("./soapbody_rpc_provider/sayHello1Msg.xml");
+        SOAPMessage inMessage = factory.createMessage(null, is);
+        dispatch.invoke(inMessage);
+        is.close();
+    }
+
