         assertEquals(&quot;Zm9vYmE=&quot;, Base64Utility.encode(&quot;fooba&quot;.getBytes()));&lt;br/&gt;
         assertEquals(&quot;Zm9vYmFy&quot;, Base64Utility.encode(&quot;foobar&quot;.getBytes()));&lt;br/&gt;
+&lt;br/&gt;
+        //decode&lt;br/&gt;
+        assertArrayEquals(new byte[]{}, Base64Utility.decode(&quot;&quot;));&lt;br/&gt;
     }&lt;/p&gt;

