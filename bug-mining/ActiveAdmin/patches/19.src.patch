@@ -0,0 +1,26 @@
+module ActiveAdmin
+  module Views
+    module Pages
+
+      # Acts as a standard rails Layout for use when logged
+      # out or when rendering custom actions.
+      class Layout < Base
+
+        def title
+          I18n.t "active_admin.#{params[:action]}", :default => params[:action].to_s.titleize
+        end
+
+        # Render the content_for(:layout) into the main content area
+        def main_content
+          content_for_layout = content_for(:layout)
+          if content_for_layout.is_a?(Arbre::HTML::Element)
+            current_dom_context.add_child content_for_layout.children
+          else
+            text_node content_for_layout
+          end
+        end
+      end
+
+    end
+  end
+end
