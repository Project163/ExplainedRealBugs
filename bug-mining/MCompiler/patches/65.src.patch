+import java.util.Comparator;
+
+public class FinalExample 
+{
+    public static final Comparator<String> comparator = ( o1, o2 ) -> 
+    {
+        final String desc1 = o1;
+        final String desc2 = o2;
+        final int compareTo;
+        if ( desc1 == null ) 
+        {
+            compareTo = -1;
+        }
+        else if ( desc2 == null )
+        {
+            compareTo = 1;
+        }
+        else
+        {
+            compareTo = desc1.compareTo( desc2 );
+        }
+        if ( compareTo == 0 )
+        {
+            return 3;
+        }
+        return compareTo;
+    };
+}
