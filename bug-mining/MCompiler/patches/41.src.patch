+        <groupId>org.codehaus.gmaven</groupId>
+        <artifactId>gmaven-plugin</artifactId>
+        <version>1.4</version>
+        <configuration>
+          <source>
+            def beanAFile = new File( project.basedir, 'src/main/java/BeanA.java' )
+            
+            beanAFile.delete()
+          </source>
+        </configuration>
+      </plugin>
+    </plugins>
+  </build>
+</project>
