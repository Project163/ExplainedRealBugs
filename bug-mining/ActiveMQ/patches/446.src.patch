+        master.setBrokerName("master");
+        bindAddress = slaveBindAddress;
+        slave = super.createBroker();
+        slave.setBrokerName("slave");
+        slave.setMasterConnectorURI(masterBindAddress);
+        bindAddress = masterBindAddress;
+        return master;
+    }
