+            session.createDurableSubscriber(topic, "SubsId" + i);
+            session.close();
+        }
+
+        Thread.sleep(2 * 1000);
+
+        if (restart) {
+            stopBroker();
+            startBroker(false);
+        }
+
+        for (int i = 0; i < 100; i++) {
+            RemoveSubscriptionInfo info = new RemoveSubscriptionInfo();
+            info.setClientId(getName());
+            info.setSubscriptionName("SubsId" + i);
