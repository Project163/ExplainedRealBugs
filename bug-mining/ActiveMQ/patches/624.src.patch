+public class SecurityJMXTest extends TestCase {
+	
+	private static final Log LOG = LogFactory.getLog(SimpleAuthenticationPluginTest.class);
+	private BrokerService broker; 
+	
+	public void setUp() throws Exception {
+		broker = createBroker();
