+        "  },\n" +
+        "  \"brokers\":{\n" +
+        "    \"broker1\":\"tcp://localhost:61616\",\n" +
+        "    \"broker2\":\"tcp://localhost:61616\"\n" +
+        "  }\n" +
+        "}";
+        Partitioning expected = Partitioning.MAPPER.readValue(json, Partitioning.class);
+        assertEquals(expected.toString(), config.toString());
+
+    }
+
