+    async def run():
+        # suppress error that task exception was not retrieved.
+        asyncio.get_running_loop().set_exception_handler(lambda *_: 0)
+        e = ErrorCheck()
+        e.add_log(log.LogEntry("fatal", "error"))
+        await e.running()
