+// isCgoImport returns true if the declaration is simply:
+//
+//   import "C"
+//
+// Note that parentheses do not affect the result.
+func isCgoImport(decl *ast.GenDecl) bool {
+	if decl.Tok != token.IMPORT || len(decl.Specs) != 1 {
