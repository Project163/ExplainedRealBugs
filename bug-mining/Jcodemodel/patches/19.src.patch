+    final JSwitch s = m.body ()._switch (p);
+    s._case (ca).body ()._break ();
+    s._case (cb).body ()._break ();
+    s._default ().body ()._break ();
+
+    CodeModelTestsHelper.parseCodeModel (cm);
+  }
