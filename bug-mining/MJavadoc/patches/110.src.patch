+
+try
+{
+    File optionsFile = new File( basedir, "target/site/apidocs/options" );
+    
+    if( !optionsFile.exists() ) 
+    {
+        System.err.println( optionsFile.getAbsolutePath() + " is missing." );
+        return false;
+    }
+
