+                Proxy proxy = settings.getActiveProxy();
+                if ( proxy != null )
+                {
+                    if ( "http".equals( scheme ) || "https".equals( scheme ) )
+                    {
+                        scheme = "http.";
+                    }
+                    else if ( "ftp".equals( scheme ) )
+                    {
+                        scheme = "ftp.";
+                    }
+                    else
+                    {
+                        scheme = "";
+                    }
+
