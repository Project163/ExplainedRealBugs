val df = (1 to 3).map(i =&amp;gt; (i, s&quot;val_$i&quot;, i * 2)).toDF(&quot;a&quot;, &quot;b&quot;, &quot;c&quot;)&lt;br/&gt;
 df.write&lt;br/&gt;
            .format(&quot;parquet&quot;)&lt;br/&gt;
            .mode(SaveMode.Overwrite)&lt;br/&gt;
            .saveAsTable(&quot;ttt3&quot;)&lt;/p&gt;

