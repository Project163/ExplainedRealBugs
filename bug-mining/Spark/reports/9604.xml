<item>
            <title>[SPARK-47455] Fix Resource Handling of `scalaStyleOnCompileConfig` in SparkBuild.scala</title>
                <link>https://issues.apache.org/jira/browse/SPARK-47455</link>
                <project id="12315420" key="SPARK">Spark</project>
                    <description>&lt;p&gt;&lt;a href=&quot;https://github.com/apache/spark/blob/e01ed0da22f24204fe23143032ff39be7f4b56af/project/SparkBuild.scala#L157-L173&quot; class=&quot;external-link&quot; target=&quot;_blank&quot; rel=&quot;nofollow noopener&quot;&gt;https://github.com/apache/spark/blob/e01ed0da22f24204fe23143032ff39be7f4b56af/project/SparkBuild.scala#L157-L173&lt;/a&gt;&lt;/p&gt;

&lt;p&gt;&#160;&lt;/p&gt;
&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;
val scalaStyleOnCompileConfig: &lt;span class=&quot;code-object&quot;&gt;String&lt;/span&gt; = {
&#160; &#160; val in = &lt;span class=&quot;code-quote&quot;&gt;&quot;scalastyle-config.xml&quot;&lt;/span&gt;
&#160; &#160; val out = &lt;span class=&quot;code-quote&quot;&gt;&quot;scalastyle-on-compile.generated.xml&quot;&lt;/span&gt;
&#160; &#160; val replacements = Map(
&#160; &#160; &#160; &lt;span class=&quot;code-quote&quot;&gt;&quot;&quot;&quot;customId=&quot;&lt;/span&gt;println&lt;span class=&quot;code-quote&quot;&gt;&quot; level=&quot;&lt;/span&gt;error&lt;span class=&quot;code-quote&quot;&gt;&quot;&quot;&quot;&quot; -&amp;gt; &quot;&lt;/span&gt;&lt;span class=&quot;code-quote&quot;&gt;&quot;&quot;customId=&quot;&lt;/span&gt;println&lt;span class=&quot;code-quote&quot;&gt;&quot; level=&quot;&lt;/span&gt;warn&quot;&quot;&quot;&quot;
&#160; &#160; )
&#160; &#160; &lt;span class=&quot;code-keyword&quot;&gt;var&lt;/span&gt; contents = Source.fromFile(in).getLines.mkString(&lt;span class=&quot;code-quote&quot;&gt;&quot;\n&quot;&lt;/span&gt;)
&#160; &#160; &lt;span class=&quot;code-keyword&quot;&gt;for&lt;/span&gt; ((k, v) &amp;lt;- replacements) {
&#160; &#160; &#160; require(contents.contains(k), s&lt;span class=&quot;code-quote&quot;&gt;&quot;Could not rewrite &lt;span class=&quot;code-quote&quot;&gt;&apos;$k&apos;&lt;/span&gt; in original scalastyle config.&quot;&lt;/span&gt;)
&#160; &#160; &#160; contents = contents.replace(k, v)
&#160; &#160; }
&#160; &#160; &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; PrintWriter(out) {
&#160; &#160; &#160; write(contents)
&#160; &#160; &#160; close()
&#160; &#160; }
&#160; &#160; out
&#160; } &lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;
&lt;p&gt;`Source.fromFile(in)` opens a `BufferedSource` resource handle, but it does not close it.&lt;/p&gt;</description>
