	at org.apache.spark.sql.catalyst.trees.TreeNode.transformDown(TreeNode.scala:226)&lt;br/&gt;
	at org.apache.spark.sql.catalyst.trees.TreeNode$$anonfun$transformDown$1.apply(TreeNode.scala:232)&lt;br/&gt;
	at org.apache.spark.sql.catalyst.trees.TreeNode$$anonfun$transformDown$1.apply(TreeNode.scala:232)&lt;br/&gt;
