                    <description>&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;val df1 = (1 to 10).map(i =&amp;gt; (s&lt;span class=&quot;code-quote&quot;&gt;&quot;str_$i&quot;&lt;/span&gt;, i)).toDF(&lt;span class=&quot;code-quote&quot;&gt;&quot;i&quot;&lt;/span&gt;, &lt;span class=&quot;code-quote&quot;&gt;&quot;j&quot;&lt;/span&gt;)
val df2 =
  df1
  .join(df1.select(df1(&lt;span class=&quot;code-quote&quot;&gt;&quot;i&quot;&lt;/span&gt;)), &lt;span class=&quot;code-quote&quot;&gt;&quot;i&quot;&lt;/span&gt;)
  .select(df1(&lt;span class=&quot;code-quote&quot;&gt;&quot;i&quot;&lt;/span&gt;), df1(&lt;span class=&quot;code-quote&quot;&gt;&quot;j&quot;&lt;/span&gt;))

val df3 = df2.withColumnRenamed(&lt;span class=&quot;code-quote&quot;&gt;&quot;i&quot;&lt;/span&gt;, &lt;span class=&quot;code-quote&quot;&gt;&quot;i1&quot;&lt;/span&gt;).withColumnRenamed(&lt;span class=&quot;code-quote&quot;&gt;&quot;j&quot;&lt;/span&gt;, &lt;span class=&quot;code-quote&quot;&gt;&quot;j1&quot;&lt;/span&gt;)
val df4 =
  df2
  .join(df3, df2(&lt;span class=&quot;code-quote&quot;&gt;&quot;i&quot;&lt;/span&gt;) === df3(&lt;span class=&quot;code-quote&quot;&gt;&quot;i1&quot;&lt;/span&gt;))
  .withColumn(&lt;span class=&quot;code-quote&quot;&gt;&quot;diff&quot;&lt;/span&gt;, $&lt;span class=&quot;code-quote&quot;&gt;&quot;j&quot;&lt;/span&gt; - $&lt;span class=&quot;code-quote&quot;&gt;&quot;j1&quot;&lt;/span&gt;)

df4.show(100, &lt;span class=&quot;code-keyword&quot;&gt;false&lt;/span&gt;)

