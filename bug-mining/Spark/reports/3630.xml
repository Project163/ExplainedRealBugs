val dfWithMetadata = df.select(col(&lt;span class=&quot;code-quote&quot;&gt;&quot;A&quot;&lt;/span&gt;).as(&lt;span class=&quot;code-quote&quot;&gt;&quot;A&quot;&lt;/span&gt;, md))
