    def getOne(self):&lt;br/&gt;
        return &apos;one&apos;&lt;/p&gt;


&lt;p&gt;def f():&lt;br/&gt;
    print type(t)&lt;br/&gt;
    return &apos;ok&apos;&lt;/p&gt;


&lt;p&gt;t = TestClass()&lt;br/&gt;
a = [ 1 , 2, 3, 4, 5 ]&lt;br/&gt;
b = sc.parallelize(a)&lt;br/&gt;
