scala&amp;gt; val df1 = spark.read.format(&lt;span class=&quot;code-quote&quot;&gt;&quot;bigquery&quot;&lt;/span&gt;).load(&lt;span class=&quot;code-quote&quot;&gt;&quot;bigquery-&lt;span class=&quot;code-keyword&quot;&gt;public&lt;/span&gt;-data.samples.shakespeare&quot;&lt;/span&gt;)
