scala&amp;gt; df1.count
res0: &lt;span class=&quot;code-object&quot;&gt;Long&lt;/span&gt; = 164656                                                             

scala&amp;gt; val df2 = spark.read.format(&lt;span class=&quot;code-quote&quot;&gt;&quot;com.google.cloud.spark.bigquery.v2.BigQueryDataSourceV2&quot;&lt;/span&gt;).load(&lt;span class=&quot;code-quote&quot;&gt;&quot;bigquery-&lt;span class=&quot;code-keyword&quot;&gt;public&lt;/span&gt;-data.samples.shakespeare&quot;&lt;/span&gt;)
