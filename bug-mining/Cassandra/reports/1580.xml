        at org.apache.cassandra.cql3.statements.AlterTableStatement.&amp;lt;init&amp;gt;(AlterTableStatement.java:52)
        at org.apache.cassandra.cql3.CqlParser.alterTableStatement(CqlParser.java:2286)
