<item>
            <title>[CASSANDRA-6071] CqlStorage loading compact table adds an extraneous field to the pig schema</title>
                <link>https://issues.apache.org/jira/browse/CASSANDRA-6071</link>
                <project id="12310865" key="CASSANDRA">Apache Cassandra</project>
                    <description>&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;CREATE TABLE t (
  key text,
  field1 &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;,
  field2 &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;
  PRIMARY KEY (key, field1)
) WITH COMPACT STORAGE;

INSERT INTO t (key,field1,field2) VALUES (&lt;span class=&quot;code-quote&quot;&gt;&apos;key1&apos;&lt;/span&gt;,1,2);
INSERT INTO t (key,field1,field2) VALUES (&lt;span class=&quot;code-quote&quot;&gt;&apos;key2&apos;&lt;/span&gt;,1,2);
INSERT INTO t (key,field1,field2) VALUES (&lt;span class=&quot;code-quote&quot;&gt;&apos;key3&apos;&lt;/span&gt;,1,2);
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;

&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;grunt&amp;gt; t = LOAD &lt;span class=&quot;code-quote&quot;&gt;&apos;cql:&lt;span class=&quot;code-comment&quot;&gt;//ks/t&apos;&lt;/span&gt; USING CqlStorage();
&lt;/span&gt;grunt&amp;gt; describe t;                                 
t: {key: chararray,field1: &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;,field2: &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;,value: &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;}
dump t;
(key1,1,2,)
(key3,1,2,)
(key2,1,2,)
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;</description>
