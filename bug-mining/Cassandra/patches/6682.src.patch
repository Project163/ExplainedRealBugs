+    {
+        ByteBuffer out = ByteBuffer.allocate(1);
+        out.put((byte)e.ordinal());
+        out.flip();
+        return out;
+    }
+
+    @Override
+    public long serializedSize(E t, int version)
+    {
+        return 1;
+    }
+
