      &amp;lt;source type=&lt;span class=&quot;code-quote&quot;&gt;&quot;inline&quot;&lt;/span&gt;&amp;gt;
         &amp;lt;b xmlns=&quot;&quot;/&amp;gt;
      &amp;lt;/source&amp;gt;
      &amp;lt;target xmlns:ns=&lt;span class=&quot;code-quote&quot;&gt;&quot;http:&lt;span class=&quot;code-comment&quot;&gt;//org.apache.synapse/xsd&quot;&lt;/span&gt; action=&lt;span class=&quot;code-quote&quot;&gt;&quot;child&quot;&lt;/span&gt; xpath=&lt;span class=&quot;code-quote&quot;&gt;&quot;$ctx:AA&quot;&lt;/span&gt;/&amp;gt;
