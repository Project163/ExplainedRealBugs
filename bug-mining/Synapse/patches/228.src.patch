+                        </goals>
+                        <configuration>
+                            <tasks>
+                                <unjar dest="${project.build.outputDirectory}">
+                                    <fileset dir="${basedir}/jars">
+                                        <include name="**/*.jar"/>
+                                    </fileset>
+                                </unjar>
+                            </tasks>
+                        </configuration>
+                    </execution>
+                </executions>
