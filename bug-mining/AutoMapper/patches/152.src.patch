+            destination.Value.ShouldEqual((short)2);
+        }
+
+        [Fact]
+        public void Should_map_the_value_with_condition()
+        {
+            var destination = Mapper.Map<Source, Destination>(new Source { Value = 0 });
+            destination.Value.ShouldBeNull();
+        }
+    }
