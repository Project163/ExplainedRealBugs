+namespace AutoMapper.UnitTests.Bug
+{
+    public class GuidTryExpression : AutoMapperSpecBase
+    {
+        private Destination _destination;
+        private Guid _value = Guid.NewGuid();
+
+        class Source
+        {
+            public Guid Value { get; set; }
+        }
