+func (l *Location) SameArrayElement(other *Location) bool {
+	if len(l.ArrayPositions) != len(other.ArrayPositions) {
+		return false
+	}
+	for i, elem := range l.ArrayPositions {
+		if other.ArrayPositions[i] != elem {
