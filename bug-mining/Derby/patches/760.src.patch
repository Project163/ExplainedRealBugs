+ *
+ */
+class DropDatabaseSetup extends TestSetup {
+
+    DropDatabaseSetup(Test test) {
+        super(test);
+     }
+    
+    /**
+     * Drop the current database.
+     */
+    protected void tearDown() throws Exception {  
