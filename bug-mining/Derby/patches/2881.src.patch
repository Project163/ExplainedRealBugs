+    {
+        if ( namedScopes == null ) { return 0; }
+
+        int[]   scopeDepth = namedScopes.get( scopeName );
+        if ( scopeDepth == null )   { return 0; }
+        else { return scopeDepth[ SCOPE_CELL ]; }
+    }
