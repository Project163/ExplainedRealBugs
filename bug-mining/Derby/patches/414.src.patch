+	private	Method[]	sortMethods( Class iface )
+		throws Exception
+	{
+		Method[]			raw = iface.getMethods();
+		int					count = raw.length;
+		Method[]			cooked = new Method[ count ];
+		MethodSortable[]	sortables = new MethodSortable[ count ];
+
