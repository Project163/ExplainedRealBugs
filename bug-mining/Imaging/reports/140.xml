&#160; &#160; at org.apache.commons.imaging.formats.png.PngImageParser.getBufferedImage(PngImageParser.java:68)
&#160; &#160; at org.apache.commons.imaging.AbstractImageParser.getAllBufferedImages(AbstractImageParser.java:259)
&#160; &#160; at org.apache.commons.imaging.Imaging.getAllBufferedImages(Imaging.java:162)
