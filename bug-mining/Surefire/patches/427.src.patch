+    @Test
+    public void test()
+        throws VerificationException, FileNotFoundException
+    {
+        OutputValidator validator = unpack().maven().executeTest();
+        validator.assertTestSuiteResults( 1, 0, 0, 0 );
+        assertFalse( validator.getSurefireReportsXmlFile(
