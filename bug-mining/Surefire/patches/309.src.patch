+        <configuration>
+          <skip>true</skip>
+        </configuration>
+      </plugin>
+    </plugins>
+  </build>
+
+  <profiles>
+    <profile>
+      <id>parallel</id>
+      <properties>
+        <useInterpolatedSettings>false</useInterpolatedSettings>
+      </properties>
