+                      <artifactId>apache-maven</artifactId>
+                      <version>2.2.1</version>
+                      <type>tar.gz</type>
+                      <classifier>bin</classifier>
+                      <overWrite>false</overWrite>
+                      <outputDirectory>${project.build.directory}/maven-extract</outputDirectory>
