+            Assert.assertFalse(tmp2.exists());
+            validator.assertTestSuiteResults( 2, 0, 0, 0 );
+        }
+        finally
+        {
+            if (tmp1 != null)
+            {
+                tmp1.delete();
+            }
+            if (tmp2 != null)
+            {
+                tmp2.delete();
+            }
+        }
+    }
+}
