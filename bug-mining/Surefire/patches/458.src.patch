+        abstract void abs()
+            throws IOException;
+
+        void a()
+        {
+            try
+            {
+                abs();
+            }
+            catch ( Exception e )
+            {
+                throw new IllegalStateException( e );
+            }
+        }
+    }
+
+    static class B extends A
+    {
+        private final JRE jre = new JRE();
+
+        void b()
+        {
+            try
+            {
+                a();
+            }
+            catch ( Exception e )
+            {
+                throw new RuntimeException( e );
+            }
+        }
+
+        @Override
+        void abs()
+            throws IOException
+        {
+            jre.throwException();
+        }
+    }
+
+    static class C
+    {
+        private final B b = new B();
+
+        void c()
