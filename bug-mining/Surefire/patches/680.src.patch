+public class ParametersTest
+{
+    public static Stream<ConnectionPoolFactory> pools()
+    {
+        return Stream.of( new ConnectionPoolFactory( "duplex" ),
+            new ConnectionPoolFactory( "multiplex" ),
+            new ConnectionPoolFactory( "round-robin" ) );
+    }
