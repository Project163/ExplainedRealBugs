+            x = 0;
+        }
+        if (y < 0)
+        {
+            y = 0;
+        }
+        if (z < 0)
+        {
+            z = 0;
+        }
+        return CIEXYZ.toRGB(new float[]
+        {
+            x, y, z
+        });
+    }
+
+    /**
