                            <comment id="15035639" author="kattelus" created="Wed, 2 Dec 2015 11:04:37 +0000"  >&lt;p&gt;Code used in testing:&lt;/p&gt;
&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;&lt;span class=&quot;code-keyword&quot;&gt;public&lt;/span&gt; &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;PDFBoxMultilineTest {

    @Test
    &lt;span class=&quot;code-keyword&quot;&gt;public&lt;/span&gt; void testGeneration() &lt;span class=&quot;code-keyword&quot;&gt;throws&lt;/span&gt; IOException  {
        File template = FileBackedStringAssert.resolveResource(&lt;span class=&quot;code-quote&quot;&gt;&quot;PDFBox_test.pdf&quot;&lt;/span&gt;);
        File result = File.createTempFile(&lt;span class=&quot;code-quote&quot;&gt;&quot;test&quot;&lt;/span&gt;, &lt;span class=&quot;code-quote&quot;&gt;&quot;.pdf&quot;&lt;/span&gt;);

        PDDocument pdfDocument = PDDocument.load(template);

        &lt;span class=&quot;code-comment&quot;&gt;// get the document catalog
&lt;/span&gt;        PDAcroForm acroForm = pdfDocument.getDocumentCatalog().getAcroForm();
        fillField(acroForm, &lt;span class=&quot;code-quote&quot;&gt;&quot;multiline&quot;&lt;/span&gt;, &lt;span class=&quot;code-quote&quot;&gt;&quot;1\n2\n3\n4&quot;&lt;/span&gt;);

        &lt;span class=&quot;code-comment&quot;&gt;// Save and close the filled out form.
&lt;/span&gt;        pdfDocument.save(result);
        pdfDocument.close();
        Desktop.getDesktop().open(result);
    }

    &lt;span class=&quot;code-keyword&quot;&gt;private&lt;/span&gt; void fillField(PDAcroForm acroForm, &lt;span class=&quot;code-object&quot;&gt;String&lt;/span&gt; fieldName, &lt;span class=&quot;code-object&quot;&gt;String&lt;/span&gt; value) &lt;span class=&quot;code-keyword&quot;&gt;throws&lt;/span&gt; IOException {
        PDField field = acroForm.getField(fieldName);
        field.setValue(value);
        field.setReadOnly(&lt;span class=&quot;code-keyword&quot;&gt;true&lt;/span&gt;);
    }
}
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;</comment>
