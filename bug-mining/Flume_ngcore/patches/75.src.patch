+    memChannel.setName("memChannel");
+    pmemChannel.setName("pmemChannel");
+    Context c = new Context();
+    Configurables.configure(memChannel, c);
+    Configurables.configure(pmemChannel, c);
+    memChannel.start();
+    pmemChannel.start();
