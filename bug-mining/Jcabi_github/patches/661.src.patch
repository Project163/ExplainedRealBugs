+            Release found = null;
+            final Iterable<Release.Smart> rels = new Smarts<Release.Smart>(
+                this.iterate()
+            );
+            for (final Release.Smart rel : rels) {
+                if (rel.tag().equals(tag)) {
+                    found = rel;
+                    break;
+                }
+            }
+            if (found == null) {
+                throw new IllegalArgumentException(
+                    String.format("release not found by tag '%s'", tag)
