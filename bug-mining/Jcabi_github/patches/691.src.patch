+public class MkMilestoneTest {
+
+    /**
+     * Tests that returned repo has the same coordinates as milestone
+     *
+     * @throws IOException
+     */
+    @Test
+    public void testRepo() throws IOException {
+        final Coordinates coordinates = new Coordinates.Simple(
+                "user",
+                "repo"
+        );
