+        final Label label = new Label.Simple("first");
+        issue.labels().add(Collections.singletonList(label));
+        MatcherAssert.assertThat(
+            issue.labels().iterate(),
+            Matchers.<Label>iterableWithSize(1)
+        );
+        issue.labels().remove(label.name());
