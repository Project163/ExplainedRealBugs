+  ASSERT_OK([&pb]() -> Status {
+    SCHECK_PB_FIELDS_ARE_SET(pb, note);
+    return Status::OK();
+  }());
+
+  result = [&pb]() -> Status {
+    SCHECK_PB_FIELDS_ARE_SET(pb, name, value, note);
+    return Status::OK();
+  }();
+  ASSERT_NOK(result);
