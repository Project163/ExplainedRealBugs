+function test_JunitUndeclaredTestCaseFailures() {
+  cd "${TEST_TMPDIR}" || fail "Unexpected failure"
+
+  "${TESTBED}" \
+  --jvm_flag="-D${SUITE_PARAMETER}=com.google.testing.junit.runner.testbed.Junit4UndeclaredTestCaseFailures" \
