+        </tr>
+      <% else %>
+        <tr>
+          <th><%= t('OriginallyFailed') %></th>
+          <td><%= relative_time(job['failed_at'].is_a?(Numeric) ? Time.at(job['failed_at']) : Time.parse(job['failed_at'])) %></td>
+        </tr>
+      <% end %>
+      <tr>
+        <th><%= t('NextRetry') %></th>
+        <td><%= relative_time(job.at) %></td>
+      </tr>
+    <% end %>
+    <% if type == :scheduled %>
+      <tr>
+        <th><%= t('Scheduled') %></th>
+        <td><%= relative_time(job.at) %></td>
+      </tr>
+    <% end %>
+  </tbody>
+</table>
