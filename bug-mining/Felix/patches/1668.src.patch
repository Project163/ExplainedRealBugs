+    private void dumpComponents()
+    {
+        StringWriter sw = new StringWriter();
+        dumpState(sw, "A");
+        dumpState(sw, "B");
+        dumpState(sw, "C");
+        dumpState(sw, "D");
+        dumpState(sw, "E");
+        dumpState(sw, "F");
+        dumpState(sw, "G");
+        dumpState(sw, "H");
+        dumpState(sw, "I");
+        dumpState(sw, "J");
+        dumpState(sw, "K");
