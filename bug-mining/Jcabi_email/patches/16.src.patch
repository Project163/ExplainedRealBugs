+                    );
+                }
+                if (msg.getSubject() == null) {
+                    throw new IllegalStateException(
+                        "subject is NULL"
+                    );
+                }
+            } catch (final MessagingException ex) {
+                throw new IOException(ex);
+            }
+            return msg;
+        }
+    }
