+
+		final Label label = new Label("label");
+		add(label);
+
+		form.add(new Button("submitButton") {
+			@Override
+			public void onSubmit() {
+				label.setDefaultModel(new Model<>(model.getObject().getTextField()));
+			}
+
+			@Override
+			public void onError() {
+				label.setDefaultModel(new Model<>("Validation Error..."));
+			}
+		});
+
+	}
