+		assertEquals("4", logger.getRequests().get(3).getRequestedUrl());
+		
+		logger.addRequest(requestData());
+		assertEquals(4, logger.getRequests().size());
+		assertEquals("5", logger.getRequests().get(3).getRequestedUrl());
