+    // GIVEN succesfull assertions
+    softly.assertThat(notClassy).isNotClassy();
+    softly.assertThat(classy).isClassy();
+    softly.assertThat("String").isEqualTo("String");
+    // WHEN
+    List<Throwable> errorsCollected = softly.errorsCollected();
+    // THEN
