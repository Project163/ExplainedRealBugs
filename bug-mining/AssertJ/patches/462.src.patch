+    // WHEN/THEN
+    assertThatIterator(iterator).isEqualTo(iterator);
+  }
+
+  @Test
+  void should_not_consume_iterator_when_asserting_non_null() {
+    // GIVEN
+    Iterator<?> iterator = mock(Iterator.class);
+    // WHEN
