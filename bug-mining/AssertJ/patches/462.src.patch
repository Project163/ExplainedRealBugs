+  @Test
+  void should_initialise_actual() {
+    // GIVEN
+    Iterator<String> names = asList("Luke", "Leia").iterator();
+    // WHEN
+    Iterator<String> actual = (Iterator<String>) assertThatIterator(names).actual;
+    // THEN
+    then(actual).hasNext();
+  }
