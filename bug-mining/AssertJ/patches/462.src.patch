+    // GIVEN
+    Iterator<?> iterator = mock(Iterator.class);
+    // WHEN
+    assertThatIterator(iterator).isInstanceOf(Iterator.class);
+    // THEN
+    verifyNoInteractions(iterator);
+  }
+
