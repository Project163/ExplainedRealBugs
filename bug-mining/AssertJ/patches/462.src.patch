+    // THEN
+    verifyNoInteractions(iterator);
+  }
+
+  @Test
+  void isOfAnyClassIn_should_check_the_original_iterator_without_consuming_it() {
+    assertThatIterator(stringIterator).isOfAnyClassIn(Iterator.class, StringIterator.class);
+  }
