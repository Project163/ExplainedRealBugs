+  }
+
+  @Test
+  void should_throw_IllegalArgumentException_when_allowed_difference_duration_is_null() {
+    // GIVEN
+    Duration actual = Duration.ofMinutes(2);
+    Duration expected = Duration.ofDays(5);
+    Duration allowedDifference = null;
+    // WHEN
