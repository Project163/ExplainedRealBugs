+        // https://github.com/jhy/jsoup/issues/1176
+        TextNode x = new TextNode("zzz");
+        x.attributes(); // moves content from leafnode value to attributes, which were missed in clone
+        TextNode y = x.clone();
+        y.text("xxx");
+        assertEquals("zzz", x.text());
