        &lt;span class=&quot;code-object&quot;&gt;boolean&lt;/span&gt; enableV2MetricsDataPoints = ObjectReader.getBoolean(topoConf.get(Config.TOPOLOGY_ENABLE_V2_METRICS_TICK), &lt;span class=&quot;code-keyword&quot;&gt;false&lt;/span&gt;);
        &lt;span class=&quot;code-keyword&quot;&gt;if&lt;/span&gt; (!enableV2MetricsDataPoints) {
            &lt;span class=&quot;code-keyword&quot;&gt;return&lt;/span&gt;;
        }
        StormMetricRegistry stormMetricRegistry = workerData.getMetricRegistry();
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;


