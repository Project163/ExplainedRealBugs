+	}
+	if _, body := testRequest(t, ts, "GET", "/private/nope", nil); body != "custom not-found" {
+		t.Fatalf(body)
+	}
+	if _, body := testRequest(t, ts, "GET", "/private/resource/nope", nil); body != "custom not-found" {
+		t.Fatalf(body)
+	}
+}
