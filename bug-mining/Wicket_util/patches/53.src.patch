+	 */
+	public static String simpleName(final Class<?> c)
+	{
+		String simpleName;
+		if (c != null)
+		{
+			if (c.isAnonymousClass())
+			{
+				simpleName = c.getSuperclass().getSimpleName();
+			}
+			else
+			{
+				simpleName = c.getSimpleName();
+			}
+		}
+		else
+		{
+			simpleName = null;
+		}
+
