+                        null,
+                        $class_storage,
+                        $parent_storage,
+                        $pseudo_method_storage,
+                        $parent_method_storage,
+                        $fq_class_name,
+                        $pseudo_method_storage->visibility ?: 0,
+                        $class_storage->location ?: $pseudo_method_storage->location,
+                        $class_storage->suppressed_issues,
+                        true,
+                        false,
+                    );
+                }
+            }
