+
+pub trait SerdeReplace {
+    fn replace(&mut self, key: &str, value: Value) -> Result<(), Box<dyn Error>>;
+}
+
+macro_rules! impl_replace {
+    ($($ty:ty),*$(,)*) => {
+        $(
+            impl SerdeReplace for $ty {
+                fn replace(&mut self, key: &str, value: Value) -> Result<(), Box<dyn Error>> {
+                    replace_simple(self, key, value)
+                }
+            }
+        )*
+    };
+}
+
