+
+    // key_bindings -> keyboard.bindings
+    move_value(config_table, &["key_bindings"], &["keyboard", "bindings"])?;
+
+    // mouse_bindings -> keyboard.bindings
+    move_value(config_table, &["mouse_bindings"], &["mouse", "bindings"])?;
