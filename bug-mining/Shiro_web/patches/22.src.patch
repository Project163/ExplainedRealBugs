+class IniWebEnvironmentTest extends GroovyTestCase {
+    
+    
+    //asserts SHIRO-306
+    void testObjectsAfterSecurityManagerCreation() {
+        
+        def ini = new Ini()
+        ini.load("""
+        [main]
+        compositeBean = org.apache.shiro.config.CompositeBean
+        """)
+        
+        def env = new IniWebEnvironment(ini:  ini)
+        env.init()
+
