+	case *GenSchema:
+		if schema == nil {
+			break
+		}
+		pth = rooted(*schema)
+	case GenDefinition:
+		pth = rooted(schema.GenSchema)
+	case *GenDefinition:
+		if schema == nil {
+			break
+		}
+		pth = rooted(schema.GenSchema)
+	case GenParameter:
+		pth = schema.Path
+
