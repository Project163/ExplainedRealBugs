 SIGNAL=${SIGNAL:-TERM}
 
-if [[ $(uname -s) == "OS/390" ]]; then
+OSNAME=$(uname -s)
+if [[ "$OSNAME" == "OS/390" ]]; then
     if [ -z $JOBNAME ]; then
         JOBNAME="KAFKSTRT"
     fi
     PIDS=$(ps -A -o pid,jobname,comm | grep -i $JOBNAME | grep java | grep -v grep | awk '{print $1}')
