&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;clients/src/main/java/org/apache/kafka/clients/consumer/internals/AbstractCoordinator.java:                &lt;span class=&quot;code-object&quot;&gt;Thread&lt;/span&gt;.interrupted();
clients/src/test/java/org/apache/kafka/clients/consumer/KafkaConsumerTest.java:            &lt;span class=&quot;code-object&quot;&gt;Thread&lt;/span&gt;.interrupted();
connect/runtime/src/main/java/org/apache/kafka/connect/util/TopicAdmin.java:                &lt;span class=&quot;code-object&quot;&gt;Thread&lt;/span&gt;.interrupted();
streams/src/test/java/org/apache/kafka/streams/perf/SimpleBenchmark.java:                &lt;span class=&quot;code-object&quot;&gt;Thread&lt;/span&gt;.interrupted();
&lt;/pre&gt;
