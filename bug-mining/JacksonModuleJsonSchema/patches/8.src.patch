+                "        \"testOptions\": {\n" +
+                "            \"type\": \"array\",\n" +
+                "            \"id\": \"testOptions\",\n" +
+                "            \"required\":true,\n" +
+                "            \"items\": {\n" +
+                "                \"type\": \"string\",\n" +
+                "                \"enum\": [\n" +
+                "                    \"Section 1 'Macaroni and Cheese'\",\n" +
+                "                    \"Section 2 'Spaghetti and Meatballs'\",\n" +
+                "                    \"Section 3 'Fish and Chips'\",\n" +
+                "                    \"Section 4 'Sausage and Mash'\"\n" +
