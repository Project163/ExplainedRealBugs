        at org.apache.jackrabbit.oak.plugins.mongomk.MongoDocumentStore.invalidateCache(MongoDocumentStore.java:140) ~[oak-core-0.15-SNAPSHOT.jar:0.15-SNAPSHOT]
        at org.apache.jackrabbit.oak.plugins.mongomk.MongoNodeStore.backgroundRead(MongoNodeStore.java:1151) ~[oak-core-0.15-SNAPSHOT.jar:0.15-SNAPSHOT]
