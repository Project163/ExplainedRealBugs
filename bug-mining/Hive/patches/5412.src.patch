+package org.apache.hadoop.hive.common;
+
+import static org.apache.hadoop.hive.common.JvmMetricsInfo.*;
+
+import org.apache.hadoop.log.metrics.EventCounter;
+import org.apache.hadoop.metrics2.MetricsCollector;
