+      }
+      cachedObject = field.getObject();
+      return field.getObject();
+    }
+
+    Object cachedObject;
+
+    @Override
+    public Object getObject() {
+      return this;
+    }
+
+    public long getRawDataSerializedSize() {
+      return serializedSize;
+    }
+
+  /**
+   * Get the set field's tag
+   *
+   *
+   * @return The tag of the field set in the union
+   */
+  public byte getTag() {
+    if (!parsed) {
+      parse();
+    }
+    return tag;
+  }
+  }
