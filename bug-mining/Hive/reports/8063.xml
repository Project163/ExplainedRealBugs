<item>
            <title>[HIVE-25512] Merge statement does not enforce check constraints</title>
                <link>https://issues.apache.org/jira/browse/HIVE-25512</link>
                <project id="12310843" key="HIVE">Hive</project>
                    <description>&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;
set hive.support.concurrency=&lt;span class=&quot;code-keyword&quot;&gt;true&lt;/span&gt;;
set hive.txn.manager=org.apache.hadoop.hive.ql.lockmgr.DbTxnManager;

CREATE TABLE table_check_merge(
name string CHECK (length(name)&amp;lt;=20),
age &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;,
gpa &lt;span class=&quot;code-object&quot;&gt;double&lt;/span&gt; CHECK (gpa BETWEEN 0.0 AND 4.0)
) stored as orc TBLPROPERTIES (&lt;span class=&quot;code-quote&quot;&gt;&apos;transactional&apos;&lt;/span&gt;=&lt;span class=&quot;code-quote&quot;&gt;&apos;&lt;span class=&quot;code-keyword&quot;&gt;true&lt;/span&gt;&apos;&lt;/span&gt;);

CREATE TABLE table_source( name string, age &lt;span class=&quot;code-object&quot;&gt;int&lt;/span&gt;, gpa &lt;span class=&quot;code-object&quot;&gt;double&lt;/span&gt;);

insert into table_source(name, age, gpa) values (&lt;span class=&quot;code-quote&quot;&gt;&apos;student1&apos;&lt;/span&gt;, 16, &lt;span class=&quot;code-keyword&quot;&gt;null&lt;/span&gt;), (&lt;span class=&quot;code-keyword&quot;&gt;null&lt;/span&gt;, 20, 4.0);

insert into table_check_merge(name, age, gpa) values (&lt;span class=&quot;code-quote&quot;&gt;&apos;student1&apos;&lt;/span&gt;, 16, 2.0);

merge into table_check_merge using (select age from table_source)source
on source.age=table_check_merge.age
when matched then update set gpa=6;
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;

&lt;p&gt;Merge statement tries to update gpa to 6 which is not between 0.0 and 4.0.&lt;br/&gt;
However the update succeeds.&lt;/p&gt;</description>
