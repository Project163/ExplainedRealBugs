  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/org.codehaus.janino-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/org.jamon.jamon-runtime-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/org.json-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/org.mozilla.rhino-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/sqlline-LICENSE

