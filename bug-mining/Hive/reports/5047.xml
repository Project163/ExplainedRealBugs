  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/javax.transaction.transaction-api-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/javolution-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/jline-LICENSE
  binary-&lt;span class=&quot;code-keyword&quot;&gt;package&lt;/span&gt;-licenses/org.abego.treelayout.core-LICENSE
