$ curl &apos;http://127.0.1.1:8983/solr/gettingstarted_shard1_replica1/query?wt=xml&amp;amp;distrib=false&amp;amp;q=*:*&amp;amp;fl=id,%5bxml+f=xml_value_s%5d&apos;
&amp;lt;?xml version=&quot;1.0&quot; encoding=&quot;UTF-8&quot;?&amp;gt;
