+  &amp;lt;Call class=&lt;span class=&quot;code-quote&quot;&gt;&quot;org.apache.solr.util.configuration.hadoop.SSLConfigurationsFactory&quot;&lt;/span&gt; name=&lt;span class=&quot;code-quote&quot;&gt;&quot;current&quot;&lt;/span&gt;&amp;gt;
     &amp;lt;Call name=&lt;span class=&quot;code-quote&quot;&gt;&quot;init&quot;&lt;/span&gt; /&amp;gt;
   &amp;lt;/Call&amp;gt;
-  &amp;lt;Call class=&lt;span class=&quot;code-quote&quot;&gt;&quot;org.apache.solr.util.configuration.SSLConfigurationsFactory&quot;&lt;/span&gt; name=&lt;span class=&quot;code-quote&quot;&gt;&quot;current&quot;&lt;/span&gt;&amp;gt;
+  &amp;lt;Call class=&lt;span class=&quot;code-quote&quot;&gt;&quot;org.apache.solr.util.configuration.hadoop.SSLConfigurationsFactory&quot;&lt;/span&gt; name=&lt;span class=&quot;code-quote&quot;&gt;&quot;current&quot;&lt;/span&gt;&amp;gt;
&lt;/pre&gt;
