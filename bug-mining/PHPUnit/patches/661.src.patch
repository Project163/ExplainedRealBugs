+--FILE--
+<?php declare(strict_types=1);
+interface Foo
+{
+    public function bar(string $baz): never;
+}
+
+require __DIR__ . '/../../../../vendor/autoload.php';
+
+$generator = new \PHPUnit\Framework\MockObject\Generator;
+
+$mock = $generator->generate(
