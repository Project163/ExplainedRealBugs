+
+class Issue2366Test extends PHPUnit\Framework\TestCase
+{
+    /**
+     * @dataProvider provider
+     */
+    public function testOne($o)
+    {
+        $this->assertEquals(1, $o->foo());
+    }
+
+    public function provider()
+    {
+        $o = $this->createMock(Issue2366::class);
