+        {
+            Status = ServiceStatus.Stopped;
+        }
+
+        #endregion
+
+        #region IDisposable Default Implementation
+
+        public void Dispose()
+        {
+            GC.SuppressFinalize(this);
+            Dispose(true);
+        }
+
+        protected bool _disposed = false;
+
+        protected virtual void Dispose(bool disposing) { }
+
+        #endregion
+    }
+}
