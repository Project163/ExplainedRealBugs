+
+            Assert.IsNotNull(ex, "No ArgumentException thrown");
+            Assert.That(ex.Message, Does.StartWith("myMessage"));
+#if !NETCF && !SILVERLIGHT && !PORTABLE
+            Assert.That(ex.ParamName, Is.EqualTo("myParam"));
