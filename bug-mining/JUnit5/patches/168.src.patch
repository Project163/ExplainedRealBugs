+	public void succeedingTest() {
+		EVENTS.add("succeedingTest");
+	}
+
+	@After
+	public void after() {
+		EVENTS.add("after");
+	}
+
+	@AfterClass
+	public static void afterClass() {
+		EVENTS.add("afterClass");
+	}
