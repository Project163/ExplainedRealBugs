+	private static Optional<String[]> trimmed(String[] patterns) {
+		if (patterns.length == 0) {
+			return Optional.empty();
+		}
+		// @formatter:off
+		return Optional.of(Arrays.stream(patterns)
+				.filter(StringUtils::isNotBlank)
+				.map(String::trim)
+				.toArray(String[]::new));
+		// @formatter:on
+	}
+
+}
