+
+		results.allEvents().debug().assertStatistics(stats -> stats.started(7).succeeded(7));
+	}
+
+	@ParameterizedClass
+	@ValueSource(ints = 1)
+	@ExtendWith(ParameterInfoConsumingExtension.class)
+	record TestCase(int i) {
+
+		@Nested
+		@ParameterizedClass
+		@ValueSource(ints = 2)
+		class Inner {
+
+			@Parameter
+			int j;
+
+			@ParameterizedTest
+			@ValueSource(ints = 3)
+			void test(int k) {
+				assertEquals(1, i);
+				assertEquals(2, j);
+				assertEquals(3, k);
+			}
+		}
+	}
