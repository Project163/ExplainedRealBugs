         } while (rc == 2);&lt;br/&gt;
       } else {&lt;/p&gt;
&lt;ul class=&quot;alternate&quot; type=&quot;square&quot;&gt;
	&lt;li&gt;// set the SNI hostname&lt;/li&gt;
	&lt;li&gt;SSL_set_tlsext_host_name(ssl_, getHost().c_str());&lt;br/&gt;
