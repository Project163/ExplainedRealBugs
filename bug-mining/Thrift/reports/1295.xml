                            <comment id="13701327" author="writeboard" created="Sat, 6 Jul 2013 12:36:35 +0000"  >&lt;p&gt;bug in THttpTransport.cpp&lt;br/&gt;
uint32_t THttpTransport::readMoreData() {&lt;br/&gt;
  uint32_t size;&lt;/p&gt;

&lt;p&gt;  // Get more data!&lt;br/&gt;
  refill();&lt;/p&gt;

&lt;p&gt;  if (readHeaders_) &lt;/p&gt;
{
    readHeaders();
  }

&lt;p&gt;  if (chunked_) &lt;/p&gt;
{
    size = readChunked();
  }
&lt;p&gt; else &lt;/p&gt;
{
    size = readContent(contentLength_);
    readHeaders_ = true; 
  }
&lt;p&gt;  //readHeaders_ = true;&lt;br/&gt;
  return size;&lt;br/&gt;
}&lt;/p&gt;</comment>
