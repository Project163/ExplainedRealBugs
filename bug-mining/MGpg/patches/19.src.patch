+                { "/it/sign-release-in-default-dir/pom.xml", "/target/gpg/tarballs/",
+                        new String[] { "sign-release-in-default-dir-1.0.jar.asc" }},
+                { "/it/sign-release-in-output-dir/pom.xml", "/target/signed-files/tarballs/",
