+pub fn basename(path: &str, ext: Option<&str>) -> Result<String> {
+  let file_name = Path::new(path).file_name().map(|f| f.to_string_lossy());
+  match file_name {
+    Some(p) => {
+      let maybe_stripped = if let Some(ext) = ext {
+        p.strip_suffix(ext).unwrap_or(&p).to_string()
+      } else {
+        p.to_string()
+      };
