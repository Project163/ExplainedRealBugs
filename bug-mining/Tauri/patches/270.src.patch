+fn clear_env_for_wix(cmd: &mut Command) {
+  cmd.env_clear();
+  for (k, v) in std::env::vars_os() {
+    if ["SYSTEMROOT", "TMP", "TEMP"].contains(k) || k.to_string_lossy().starts_with("TAURI") {
+      cmd.env(k, v);
+    }
+  }
+}
