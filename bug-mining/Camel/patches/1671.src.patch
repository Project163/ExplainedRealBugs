+    @Test
+    public void testStaxExpression() throws InterruptedException {
+        recordsEndpoint.expectedMessageCount(10);
+        recordsEndpoint.allMessages().body().isInstanceOf(Record.class);
+
+        recordsEndpoint.assertIsSatisfied();
