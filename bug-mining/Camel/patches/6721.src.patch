+package org.apache.camel.component.kafka.consumer.support.subcription;
+
+import java.util.Arrays;
+import java.util.Collection;
+import java.util.List;
+import java.util.regex.Pattern;
+
+/**
+ * Carries topic information
+ */
+public final class TopicInfo {
+    private final Pattern pattern;
+    private final List<String> topicName;
+
+    public TopicInfo(Pattern pattern, String topicName) {
+        this.pattern = pattern;
+        this.topicName = Arrays.asList(topicName.split(","));
+    }
+
+    public boolean isPattern() {
+        return pattern != null;
+    }
+
+    public Pattern getPattern() {
+        return pattern;
+    }
+
+    public Collection<String> getTopics() {
+        return topicName;
+    }
+}
