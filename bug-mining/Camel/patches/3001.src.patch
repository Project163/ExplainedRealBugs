+        log.info("slip " + properties.get("EXIT"));
+        if (properties.get("EXIT") != null && properties.get("EXIT").equals("PLEASE")) {
+            log.info("Exiting after " + MAX_ITERATIONS + " iterations");
+            return null;
+        } else {
+            return "direct:while_body";
+        }
+    }
