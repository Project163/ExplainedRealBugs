+    public void testOnExceptionMisconfigured() throws Exception {
+        context.addRoutes(new RouteBuilder() {
+            @Override
+            public void configure() throws Exception {
+                onException(Exception.class);
+
+                from("direct:start").to("mock:result");
+            }
