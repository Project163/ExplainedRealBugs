+        // data should be in utf, where the danish ae is -61 -90
+        assertEquals(5, data.length);
+        assertEquals(65, data[0]);
+        assertEquals(66, data[1]);
+        assertEquals(67, data[2]);
+        assertEquals(-61, data[3]);
+        assertEquals(-90, data[4]);
+    }
+
