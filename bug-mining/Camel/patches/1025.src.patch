+        context.addRoutes(new RouteBuilder() {
+            @Override
+            public void configure() throws Exception {
+                onCompletion()
+                    .to("mock:before")
+                    .delay(1000)
+                    .setBody(simple("OnComplete:${body}"))
+                    .to("mock:after");
+
+                from("direct:start")
+                    .process(new MyProcessor())
+                    .to("mock:result");
+            }
+        });
