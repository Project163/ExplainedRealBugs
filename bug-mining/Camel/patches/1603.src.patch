+                    .to("mock://error");
+
+                from("direct://start")
+                    .to("log:foo")
+                    .dynamicRouter().method(DynamicRouterThrowExceptionFromExpressionTest.class, "routeTo")
+                        .to("mock://result")
+                    .end();
+            }
+        };
+    }
