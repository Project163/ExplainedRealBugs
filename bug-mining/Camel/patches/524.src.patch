+                    public void process(Exchange exchange) throws Exception {
+                        assertNotNull(exchange.getIn().getHeader(Exchange.FILE_NAME));
+                        assertEquals("hello.txt", exchange.getIn().getHeader(Exchange.FILE_NAME_ONLY));
