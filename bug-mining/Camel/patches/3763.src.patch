+    protected String[] loadConfigAdminConfigurationFile() {
+        return new String[] {"src/test/resources/etc/augmented.no.fallback.cfg", "augmented.no.fallback"};
+    }
+
+    @Test
+    public void testFallbackToUnaugmentedProperty() throws Exception {
+    }
+
+}
