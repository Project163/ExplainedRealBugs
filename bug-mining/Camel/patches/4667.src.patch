+
+public class ComponentOptionModelTest {
+
+    ComponentOptionModel componentOptionModelUnderTest;
+
+    @BeforeEach
+    public void setup() {
+        componentOptionModelUnderTest = new ComponentOptionModel();
+    }
+
+    static Stream<Arguments> getShortJavaTypeVarations() {
+        return Stream.of(
