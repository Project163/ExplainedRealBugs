+                from("seda:foo")
+                    .errorHandler(noErrorHandler())
+                    .process(new Processor() {
+                        @Override
+                        public void process(Exchange exchange) throws Exception {
+                            done = done + "C";
+                        }
+                    })
+                    .throwException(new IllegalArgumentException("Forced"));
+            }
+        };
+    }
