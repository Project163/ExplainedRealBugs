+                    }
+                } catch (Exception e) {
+                    exchange.setException(e);
+                } finally {
+                    callback.done(doneSync);
+                }
+            }
+        });
+
+        return sync;
+    }
+
+    @Override
+    public String toString() {
+        return "RouteContextProcessor[" + processor + "]";
+    }
+
