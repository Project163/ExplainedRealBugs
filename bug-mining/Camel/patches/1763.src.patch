+
+    /**
+     * Sample WebService
+     */
+    @WebService(targetNamespace = "urn:test", serviceName = "testService", portName = "testPort")
+    public interface SampleWS {
+
+        @WebMethod
+        @WebResult(name = "result", targetNamespace = "urn:test")
+        String getSomething();
+    }
