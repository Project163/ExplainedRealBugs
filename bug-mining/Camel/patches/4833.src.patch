+        
+        super.setUp();
+        
+        XmlRootElement xmlRootElementAnnotation = Message.class.getAnnotation(XmlRootElement.class);
+        assertNull(xmlRootElementAnnotation);
+      
+        jbCtx = JAXBContext.newInstance(Message.class);
