+        }
+
+        try {
+            LOG.info("Configuring GlobalSettings to enable EL");
+            Field field = settings.getClass().getDeclaredField("elEnabled");
+            ReflectionHelper.setField(field, settings, true);
+        } catch (NoSuchFieldException nsfEx) {
