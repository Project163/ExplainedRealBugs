+        deleteDirectory("res");
+        createDirectory("res/home/myapp");
+        initFtpServer();
+        ftpServer.start();
+    }
+
+    public void tearDown() throws Exception {
+        super.tearDown();
+        ftpServer.stop();
+        ftpServer = null;
+    }
