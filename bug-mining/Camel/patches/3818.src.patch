+                    }
+                }
+            } catch (Hl7AcknowledgementGenerationException ackGenerationException) {
+                exchange.setProperty(MLLP_ACKNOWLEDGEMENT_EXCEPTION, ackGenerationException);
+                exchange.setException(ackGenerationException);
+            }
