+        mock.expectedHeaderReceived("id", "1");
+
+        CoapClient client = new CoapClient("coap://localhost:" + coapport + "/users/1");
+        client.setTimeout(1000000);
+        CoapResponse rsp = client.put(body, MediaTypeRegistry.APPLICATION_JSON);
