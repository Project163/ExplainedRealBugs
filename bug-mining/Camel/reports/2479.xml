	at com.rabbitmq.client.impl.AMQChannel.transmit(AMQChannel.java:291) ~&lt;span class=&quot;error&quot;&gt;&amp;#91;amqp-client-3.1.3.jar:na&amp;#93;&lt;/span&gt;&lt;br/&gt;
	at com.rabbitmq.client.impl.AMQChannel.transmit(AMQChannel.java:285) ~&lt;span class=&quot;error&quot;&gt;&amp;#91;amqp-client-3.1.3.jar:na&amp;#93;&lt;/span&gt;&lt;br/&gt;
	at com.rabbitmq.client.impl.ChannelN.basicAck(ChannelN.java:907) ~&lt;span class=&quot;error&quot;&gt;&amp;#91;amqp-client-3.1.3.jar:na&amp;#93;&lt;/span&gt;&lt;br/&gt;
	at org.apache.camel.component.rabbitmq.RabbitMQConsumer$RabbitConsumer.handleDelivery(RabbitMQConsumer.java:126) ~&lt;span class=&quot;error&quot;&gt;&amp;#91;camel-rabbitmq-2.12.0.jar:2.12.0&amp;#93;&lt;/span&gt;&lt;br/&gt;
