+&lt;br/&gt;
+    public void testResolveUri() throws Exception &lt;/p&gt;
{
+        CamelContext context = new DefaultCamelContext();
+        XsltUriResolver xsltUriResolver = new XsltUriResolver(context, &quot;classpath:xslt/staff/staff.xsl&quot;);
