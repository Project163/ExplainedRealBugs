            &amp;lt;SizeBasedTriggeringPolicy size=&lt;span class=&quot;code-quote&quot;&gt;&quot;10MB&quot;&lt;/span&gt;/&amp;gt;
        &amp;lt;/Policies&amp;gt;
    &amp;lt;/RollingFile&amp;gt;

    &amp;lt;RollingFile name=&lt;span class=&quot;code-quote&quot;&gt;&quot;Profiler&quot;&lt;/span&gt; fileName=&lt;span class=&quot;code-quote&quot;&gt;&quot;${GFT_VAR}/log/${target}.stat&quot;&lt;/span&gt;
                 filePattern=&lt;span class=&quot;code-quote&quot;&gt;&quot;${GFT_VAR}/log/${target}.stat.%i&quot;&lt;/span&gt;&amp;gt;
        &amp;lt;PatternLayout pattern=&lt;span class=&quot;code-quote&quot;&gt;&quot;[%d] [%t] %-5p %c - %m%n&quot;&lt;/span&gt;/&amp;gt;
        &amp;lt;DefaultRolloverStrategy max=&lt;span class=&quot;code-quote&quot;&gt;&quot;3&quot;&lt;/span&gt;/&amp;gt;
