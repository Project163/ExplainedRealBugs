    &amp;lt;/Root&amp;gt;

    &amp;lt;Logger name=&lt;span class=&quot;code-quote&quot;&gt;&quot;net.sf&quot;&lt;/span&gt; level=&lt;span class=&quot;code-quote&quot;&gt;&quot;info&quot;&lt;/span&gt;&amp;gt;
