&lt;/div&gt;&lt;/div&gt;
&lt;p&gt;for config:&lt;/p&gt;
&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;
&amp;lt;?xml version=&lt;span class=&quot;code-quote&quot;&gt;&quot;1.0&quot;&lt;/span&gt; encoding=&lt;span class=&quot;code-quote&quot;&gt;&quot;UTF-8&quot;&lt;/span&gt;?&amp;gt;
&amp;lt;Configuration
	xmlns=&lt;span class=&quot;code-quote&quot;&gt;&quot;http:&lt;span class=&quot;code-comment&quot;&gt;//logging.apache.org/log4j/2.0/config&quot;&lt;/span&gt;
&lt;/span&gt;	xmlns:xsi=&lt;span class=&quot;code-quote&quot;&gt;&quot;http:&lt;span class=&quot;code-comment&quot;&gt;//www.w3.org/2001/XMLSchema-instance&quot;&lt;/span&gt;
&lt;/span&gt;	strict=&lt;span class=&quot;code-quote&quot;&gt;&quot;&lt;span class=&quot;code-keyword&quot;&gt;true&lt;/span&gt;&quot;&lt;/span&gt;
	status=&lt;span class=&quot;code-quote&quot;&gt;&quot;warn&quot;&lt;/span&gt;
	xsi:noNamespaceSchemaLocation=&lt;span class=&quot;code-quote&quot;&gt;&quot;https:&lt;span class=&quot;code-comment&quot;&gt;//raw.githubusercontent.com/apache/logging-log4j2/master/log4j-core/src/main/resources/Log4j-config.xsd&quot;&lt;/span&gt;
&lt;/span&gt;&amp;gt;
	&amp;lt;Properties&amp;gt;
 	 	&amp;lt;Property name=&lt;span class=&quot;code-quote&quot;&gt;&quot;pattern_level_colors&quot;&lt;/span&gt;&amp;gt;
 	 	 	FATAL=bright magenta, ERROR=bright red, WARN=bright yellow, INFO=dim white, DEBUG=bright black, TRACE=cyan
 	 	&amp;lt;/Property&amp;gt;
 	 	&amp;lt;Property name=&lt;span class=&quot;code-quote&quot;&gt;&quot;pattern_styled&quot;&lt;/span&gt;&amp;gt;%highlight{%date{ISO8601} %-5level [%thread] %logger(%file:%line)}{${
		pattern_level_colors}} %style{%message}{bright white}%n%style{%throwable}{BG_red,white}
		&amp;lt;/Property&amp;gt;
	&amp;lt;/Properties&amp;gt;
	&amp;lt;Appenders&amp;gt;
		&amp;lt;Appender type=&lt;span class=&quot;code-quote&quot;&gt;&quot;Console&quot;&lt;/span&gt; name=&lt;span class=&quot;code-quote&quot;&gt;&quot;color-console&quot;&lt;/span&gt;&amp;gt;
			&amp;lt;Layout type=&lt;span class=&quot;code-quote&quot;&gt;&quot;PatternLayout&quot;&lt;/span&gt; pattern=&lt;span class=&quot;code-quote&quot;&gt;&quot;${pattern_styled}&quot;&lt;/span&gt; /&amp;gt;
