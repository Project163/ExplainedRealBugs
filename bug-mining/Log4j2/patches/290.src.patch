+ *
+ */
+public final class SetUtils {
+    private SetUtils() {};
+
+    public static String[] prefixSet(Set<String> set, String prefix) {
+        Set<String> prefixSet = new HashSet<String>();
+        for (String str : set) {
+            if (str.startsWith(prefix)) {
+                prefixSet.add(str);
+            }
+        }
+        return prefixSet.toArray(new String[prefixSet.size()]);
+    }
+}
