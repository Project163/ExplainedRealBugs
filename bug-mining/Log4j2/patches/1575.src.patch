+                    Arguments.of("%p", "%v1Level"),
+                    Arguments.of("%100p", "%100v1Level"),
+                    Arguments.of("%-100p", "%-100v1Level"),
+                    Arguments.of("%x", "%ndc"),
+                    Arguments.of("%X", "%properties"),
