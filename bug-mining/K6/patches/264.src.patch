+	t.Parallel()
+	for _, name := range []string{ // Commented ones aren't support by Sobek
+		"Int8Array", "Int16Array", "Int32Array",
+		"Uint8Array", "Uint16Array", "Uint32Array", "Uint8ClampedArray",
