+	t.Run("err_wrong_event", func(t *testing.T) {
+		t.Parallel()
+
+		b := newTestBrowser(t)
+		rt := b.vu.Runtime()
+		require.NoError(t, rt.Set("b", b.Browser))
+
+		err := b.vu.loop.Start(func() error {
+			if _, err := rt.RunString(fmt.Sprintf(script, "wrongevent")); err != nil {
+				return fmt.Errorf("%w", err)
+			}
+			return nil
+		})
+		require.Error(t, err)
