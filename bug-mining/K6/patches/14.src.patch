+func (i *InitAPI) Open(name string) string {
+	if i.fileCache == nil {
+		i.fileCache = make(map[string]string)
+	}
+
+	path, err := filepath.Abs(name)
+	if err != nil {
+		throw(i.r.VM, err)
+	}
+
+	if data, ok := i.fileCache[path]; ok {
+		return data
+	}
+
+	data, err := ioutil.ReadFile(path)
+	if err != nil {
+		throw(i.r.VM, err)
+	}
+
+	s := string(data)
+	i.fileCache[path] = s
+	return s
+}
