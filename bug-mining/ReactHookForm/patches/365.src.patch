+                {
+                  test: 'test1',
+                },
+              ],
+            },
+          ],
+        },
+      ),
+    ).toEqual({
+      test: [
+        {
+          test: [
+            {
+              test: true,
+            },
+          ],
+          test1: true,
+        },
+        {
+          test: [
+            {
+              test: true,
+            },
+          ],
+          test1: true,
+        },
+      ],
+    });
+  });
+
+  it('should work out with different data type', () => {
+    expect(
+      getDirtyFields(
+        {
+          test: [
+            {
+              test1: 'test',
+              test: [
+                {
+                  test: 'test1',
+                },
+              ],
+            },
+          ],
+        },
+        {
+          test: [
+            {
+              test1: 'test1',
+              test: true,
+            },
+            {
+              test1: 'test',
+              test: [
+                {
