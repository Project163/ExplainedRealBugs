+    actComponent(() => {
+      fireEvent.click(screen.getByRole('button', { name: 'Toggle hide' }));
+    });
+
+    actComponent(() => {
+      expect(screen.queryByRole('textbox')).toBeNull();
+    });
+
+    expect(result).toMatchSnapshot();
+  });
 });
