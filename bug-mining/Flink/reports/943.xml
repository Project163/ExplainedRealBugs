&lt;p&gt;    &amp;#8212; Diff: flink-core/src/main/java/org/apache/flink/api/common/state/StateDescriptor.java &amp;#8212;&lt;br/&gt;
    @@ -284,8 +284,14 @@ private void readObject(final ObjectInputStream in) throws IOException, ClassNot&lt;br/&gt;
     		boolean hasDefaultValue = in.readBoolean();&lt;br/&gt;
     		if (hasDefaultValue) {&lt;br/&gt;
     			int size = in.readInt();&lt;br/&gt;
    +&lt;br/&gt;
     			byte[] buffer = new byte&lt;span class=&quot;error&quot;&gt;&amp;#91;size&amp;#93;&lt;/span&gt;;&lt;/p&gt;
&lt;ul class=&quot;alternate&quot; type=&quot;square&quot;&gt;
	&lt;li&gt;int bytesRead = in.read(buffer);&lt;br/&gt;
    +&lt;br/&gt;
    +			int bytesRead = 0;&lt;br/&gt;
    +&lt;br/&gt;
    +			while (bytesRead &amp;lt; size) {&lt;br/&gt;
    +				bytesRead += in.read(buffer, bytesRead, size - bytesRead);
	&lt;ul class=&quot;alternate&quot; type=&quot;square&quot;&gt;
		&lt;li&gt;
		&lt;ul class=&quot;alternate&quot; type=&quot;square&quot;&gt;
			&lt;li&gt;End diff &amp;#8211;&lt;/li&gt;
