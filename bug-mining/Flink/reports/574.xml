&lt;pre class=&quot;code-java&quot;&gt;&lt;span class=&quot;code-keyword&quot;&gt;try&lt;/span&gt; {
	Client client = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; Client(GlobalConfiguration.getConfiguration(), getClass().getClassLoader());
	client.run(job, &lt;span class=&quot;code-keyword&quot;&gt;false&lt;/span&gt;);
}
&lt;/pre&gt;
