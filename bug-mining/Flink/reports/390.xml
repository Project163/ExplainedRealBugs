&lt;p&gt;    &lt;a href=&quot;https://github.com/apache/flink/pull/697#discussion_r30910025&quot; class=&quot;external-link&quot; target=&quot;_blank&quot; rel=&quot;nofollow noopener&quot;&gt;https://github.com/apache/flink/pull/697#discussion_r30910025&lt;/a&gt;&lt;/p&gt;

&lt;p&gt;    &amp;#8212; Diff: flink-staging/flink-streaming/flink-streaming-core/src/main/java/org/apache/flink/streaming/api/windowing/policy/DeltaPolicy.java &amp;#8212;&lt;br/&gt;
    @@ -131,4 +145,29 @@ public boolean equals(Object other) {&lt;br/&gt;
     	public String toString() &lt;/p&gt;
{
     		return &quot;DeltaPolicy(&quot; + threshold + &quot;, &quot; + deltaFuntion.getClass().getSimpleName() + &quot;)&quot;;
     	}
&lt;p&gt;    +&lt;br/&gt;
