        org.apache.flink.api.common.operators.util.UserCodeObjectWrapper.&amp;lt;init&amp;gt;(UserCodeObjectWrapper.java:84)&lt;br/&gt;
        org.apache.flink.api.common.operators.GenericDataSinkBase.&amp;lt;init&amp;gt;(GenericDataSinkBase.java:68)&lt;br/&gt;
