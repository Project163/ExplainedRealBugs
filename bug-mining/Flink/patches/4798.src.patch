+function guaranteed_kill {
+  to_stop_pid=$1
+  daemon=$2
+
+  # send sigterm for graceful shutdown
+  kill $to_stop_pid
+  # wait 10 seconds for process to stop. By default, Flink kills the JVM 5 seconds after sigterm.
