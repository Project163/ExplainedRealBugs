+    try {
+      fos = new FileOutputStream(DATA_OUTPUT_PATH)
+      val out = new DataOutputViewStreamWrapper(fos)
+
+      serializer.serialize(TEST_DATA_1, out)
+      serializer.serialize(TEST_DATA_2, out)
+      serializer.serialize(TEST_DATA_3, out)
