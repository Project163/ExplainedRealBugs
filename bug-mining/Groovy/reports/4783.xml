                            <comment id="17812491" author="emilles" created="Tue, 30 Jan 2024 21:59:46 +0000"  >&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-groovy&quot;&gt;
&lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;C {
    &lt;span class=&quot;code-keyword&quot;&gt;def&lt;/span&gt; m() { &lt;span class=&quot;code-quote&quot;&gt;&apos;C&apos;&lt;/span&gt; }
}
@SelfType(C)
&lt;span class=&quot;code-keyword&quot;&gt;trait&lt;/span&gt; T {
    &lt;span class=&quot;code-keyword&quot;&gt;def&lt;/span&gt; x() { m() }
}

&lt;span class=&quot;code-keyword&quot;&gt;def&lt;/span&gt; c = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; C()
&lt;span class=&quot;code-keyword&quot;&gt;def&lt;/span&gt; t = c.withTraits(T) &lt;span class=&quot;code-comment&quot;&gt;// &lt;span class=&quot;code-quote&quot;&gt;&apos;T$TraitAdapter&apos;&lt;/span&gt; &lt;span class=&quot;code-keyword&quot;&gt;implements&lt;/span&gt; &lt;span class=&quot;code-keyword&quot;&gt;trait&lt;/span&gt; &lt;span class=&quot;code-quote&quot;&gt;&apos;T&apos;&lt;/span&gt; but does not extend self type class &lt;span class=&quot;code-quote&quot;&gt;&apos;C&apos;&lt;/span&gt;
&lt;/span&gt;&lt;span class=&quot;code-keyword&quot;&gt;assert&lt;/span&gt; t.x() == &lt;span class=&quot;code-quote&quot;&gt;&apos;C&apos;&lt;/span&gt;
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;</comment>
