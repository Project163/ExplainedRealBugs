String s = &apos;hello 10&apos;&lt;br/&gt;
def gs = &quot;hello &lt;/p&gt;
{5+5}
&lt;p&gt;&quot;&lt;br/&gt;
def expected = &lt;span class=&quot;error&quot;&gt;&amp;#91;&amp;quot;h&amp;quot;, &amp;quot;e&amp;quot;, &amp;quot;l&amp;quot;, &amp;quot;l&amp;quot;, &amp;quot;o&amp;quot;, &amp;quot; &amp;quot;, &amp;quot;1&amp;quot;, &amp;quot;0&amp;quot;&amp;#93;&lt;/span&gt;&lt;br/&gt;
