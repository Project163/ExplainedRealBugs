def json1 = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; JsonBuilder( infoMap )
println &lt;span class=&quot;code-quote&quot;&gt;&apos;\n json1.toPrettyString()&apos;&lt;/span&gt;
println     json1.toPrettyString()

println &lt;span class=&quot;code-quote&quot;&gt;&apos;\n Building...&apos;&lt;/span&gt;
def json2 = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; JsonBuilder( info )
println &lt;span class=&quot;code-quote&quot;&gt;&apos;\n json2.dump()&apos;&lt;/span&gt;
println     json2.dump()
println &lt;span class=&quot;code-quote&quot;&gt;&apos;\n json2.toString()&apos;&lt;/span&gt;
