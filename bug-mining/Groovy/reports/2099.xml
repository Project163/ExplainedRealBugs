&lt;pre class=&quot;code-java&quot;&gt;#!/usr/bin/env groovy
&lt;span class=&quot;code-keyword&quot;&gt;import&lt;/span&gt; groovy.json.*

def info = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; Expando( tst:&lt;span class=&quot;code-quote&quot;&gt;&apos;val&apos;&lt;/span&gt; )
def infoMap = info.getProperties()
&lt;span class=&quot;code-keyword&quot;&gt;assert&lt;/span&gt; infoMap &lt;span class=&quot;code-keyword&quot;&gt;instanceof&lt;/span&gt; Map

println &apos;&apos;
