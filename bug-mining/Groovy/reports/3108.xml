                            <comment id="14469992" author="roshandawrani" created="Tue, 10 Aug 2010 06:17:55 +0000"  >&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeHeader panelHeader&quot; style=&quot;border-bottom-width: 1px;&quot;&gt;&lt;b&gt;Tests that should pass&lt;/b&gt;&lt;/div&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;&lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Groovy4365Bug &lt;span class=&quot;code-keyword&quot;&gt;extends&lt;/span&gt; gls.CompilableTestSupport {

    void testGenericTypeVariablesUsedInStaticSuccessV1() {
        shouldCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;OuterS1&amp;lt;T&amp;gt; {
                T ofoo
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;InnerS1&amp;lt;T&amp;gt; {
                    T ifoo
                }
            }
        &quot;&quot;&quot;
    }

    void testGenericTypeVariablesUsedInStaticSuccessV2() {
        shouldCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;TestS2 {
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; &amp;lt;T&amp;gt; void foo(T param1){}
            }
        &quot;&quot;&quot;
    }
    
    void testGenericTypeVariablesUsedInStaticSuccessV3() {
        shouldCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;TestS3 {
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; &amp;lt;T&amp;gt; void foo() {
                    T localVar1
                }
            }
        &quot;&quot;&quot;
    }
    
    void testGenericTypeVariablesUsedInStaticV1() {
        shouldNotCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Outer&amp;lt;T&amp;gt; {
                T ofoo
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Inner {
                    T ifoo
                }
            }
        &quot;&quot;&quot;
    }

    void testGenericTypeVariablesUsedInStaticV2() {
        shouldNotCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Test1&amp;lt;T&amp;gt; {
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; T f1
            }
        &quot;&quot;&quot;
    }

    void testGenericTypeVariablesUsedInStaticV3() {
        shouldNotCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Test2&amp;lt;T&amp;gt; {
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; foo(T param1) {}
            }
        &quot;&quot;&quot;
    }

    void testGenericTypeVariablesUsedInStaticV4() {
        shouldNotCompile &quot;&quot;&quot;
            &lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Test3&amp;lt;T&amp;gt; {
                &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; foo() {
                    T localVar1
                }
            }
        &quot;&quot;&quot;
    }
}
&lt;/pre&gt;
