            <title>[GROOVY-9344] CCE in closure shared variable assignment</title>
                <link>https://issues.apache.org/jira/browse/GROOVY-9344</link>
                <project id="12318123" key="GROOVY">Groovy</project>
                    <description>&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;
&lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;A {}
&lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;B {}

@groovy.transform.CompileStatic
def cs() {
    def &lt;span class=&quot;code-keyword&quot;&gt;var&lt;/span&gt;
    &lt;span class=&quot;code-keyword&quot;&gt;var&lt;/span&gt; = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; A()
    def c = {
        &lt;span class=&quot;code-keyword&quot;&gt;var&lt;/span&gt; = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; B() &lt;span class=&quot;code-comment&quot;&gt;// Cannot &lt;span class=&quot;code-keyword&quot;&gt;cast&lt;/span&gt; object &lt;span class=&quot;code-quote&quot;&gt;&apos;B@4e234c52&apos;&lt;/span&gt; with class &lt;span class=&quot;code-quote&quot;&gt;&apos;B&apos;&lt;/span&gt; to class &lt;span class=&quot;code-quote&quot;&gt;&apos;A&apos;&lt;/span&gt;
&lt;/span&gt;    }
    c()
    &lt;span class=&quot;code-keyword&quot;&gt;var&lt;/span&gt;.toString()
}

&lt;span class=&quot;code-keyword&quot;&gt;assert&lt;/span&gt; cs() != &lt;span class=&quot;code-keyword&quot;&gt;null&lt;/span&gt;
&lt;/pre&gt;
