                <project id="12318123" key="GROOVY">Groovy</project>
                    <description>&lt;p&gt;As reported by Peter on groovy user mailing list - :&lt;/p&gt;

&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;&lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Foo {
 &lt;span class=&quot;code-object&quot;&gt;double&lt;/span&gt; myDouble
 &lt;span class=&quot;code-object&quot;&gt;float&lt;/span&gt; myFloat
}

def foo = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; Foo()

&lt;span class=&quot;code-comment&quot;&gt;// OK
&lt;/span&gt;foo.setMyDouble 0.1

