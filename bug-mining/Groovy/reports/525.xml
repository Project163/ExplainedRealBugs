                            <comment id="14463917" author="daniel_sun" created="Tue, 11 Dec 2007 06:26:23 +0000"  >&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;&lt;span class=&quot;code-keyword&quot;&gt;import&lt;/span&gt; groovy.swing.*

def swing = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; SwingBuilder()
def frame = swing.frame() {

    tabbedPane() {
        label(text:&lt;span class=&quot;code-quote&quot;&gt;&apos;a&apos;&lt;/span&gt;, title:&lt;span class=&quot;code-quote&quot;&gt;&apos;ta&apos;&lt;/span&gt;)
