                            <comment id="15299988" author="graemerocher1" created="Wed, 25 May 2016 12:49:01 +0000"  >&lt;p&gt;Attached example reproducing the problem&lt;/p&gt;</comment>
                            <comment id="15300003" author="graemerocher1" created="Wed, 25 May 2016 13:08:35 +0000"  >&lt;p&gt;correct example app&lt;/p&gt;</comment>
                            <comment id="15300007" author="graemerocher1" created="Wed, 25 May 2016 13:11:05 +0000"  >&lt;p&gt;I narrowed it down to this script&lt;/p&gt;

&lt;div class=&quot;code panel&quot; style=&quot;border-width: 1px;&quot;&gt;&lt;div class=&quot;codeContent panelContent&quot;&gt;
&lt;pre class=&quot;code-java&quot;&gt;&lt;span class=&quot;code-keyword&quot;&gt;import&lt;/span&gt; org.codehaus.groovy.ast.ClassNode

trait Foo  {
    &lt;span class=&quot;code-keyword&quot;&gt;static&lt;/span&gt; &amp;lt;T&amp;gt; T withClient(@DelegatesTo(Foo) Closure&amp;lt;T&amp;gt; callable ) {
        &lt;span class=&quot;code-comment&quot;&gt;// no-op
&lt;/span&gt;    }
}

cls = &lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; GroovyClassLoader().parseClass(&apos;&apos;&apos;
&lt;span class=&quot;code-keyword&quot;&gt;class &lt;/span&gt;Bar &lt;span class=&quot;code-keyword&quot;&gt;implements&lt;/span&gt; Foo {}

&apos;&apos;&apos;)

&lt;span class=&quot;code-keyword&quot;&gt;new&lt;/span&gt; ClassNode(cls).methods
&lt;/pre&gt;
&lt;/div&gt;&lt;/div&gt;</comment>
