+final class Groovy9609 {
+
+    @Test
+    void testGetPropertyOnSuper() {
+        assertScript '''
+            import org.codehaus.groovy.runtime.ScriptBytecodeAdapter
+
+            class A {
+                def getX() { 'A' }
+            }
+            class B extends A {
+                def getX() { 'B' }
