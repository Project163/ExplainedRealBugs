+    @Test
+    void testDuplicateDefaultMethodsFromGroovyClasses_implements1() {
+        def err = shouldFail '''
+            interface A {
+              default void m(String n) {}
+            }
+            interface B {
+              default void m(String n) {}
+            }
+            class C implements A, B {
+              void test() {
+                m('Hi')
+              }
+            }
+        '''
+        assert err =~ /class C inherits unrelated defaults for void m\(java.lang.String\) from types A and B/
+    }
