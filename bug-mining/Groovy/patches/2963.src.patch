+                if (getterMethod == null || getterMethod.isSynthetic()) {
+                    getterMethod = method;
+                }
             }
         }
+        if (getterMethod != null) return getterMethod;
         ClassNode parent = getSuperClass();
         if (parent!=null) return parent.getGetterMethod(getterName);
         return null;
