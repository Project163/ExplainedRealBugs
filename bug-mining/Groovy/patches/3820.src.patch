+    void testTapExpressionAsSpecialConstructorArgument1() {
+        assertScript '''
+            @groovy.transform.ToString
+            class A {
+                A(x) {}
+                def b
+            }
+            class C {
+                C() {
+                    this(new A(null).tap { b = 42 })
+                }
+                C(x) {
+                    assert x.toString() == 'A(42)'
+                }
+            }
+            new C()
+        '''
+    }
+
