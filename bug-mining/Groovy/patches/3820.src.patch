+        assertScript '''
+            class A {
+                A(a) { assert a == 'abc123' }
+            }
+
+            class B extends A {
+                static String f = '123'
+                static String g() { 'abc' }
+                B() {
+                    super(g() + getF())
+                }
+            }
+
+            new B()
+        '''
+    }
+
+    @Test
+    void testCallSuperStaticMethodInSuperConstructor() {
+        assertScript '''
+            class A {
+                static String f = '123'
+                static String g() { 'abc' }
+                A(a) { assert a == 'abc123' }
+            }
+
+            class B extends A {
+                B() {
+                    super(g() + getF())
+                }
+            }
+
+            new B()
+        '''
+    }
