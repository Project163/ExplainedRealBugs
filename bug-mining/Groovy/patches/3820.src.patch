+            class A {
+                A(x) {}
+                def b
+                void init() { b = 42 }
+            }
+            class C {
+                C() {
+                    this(new A(null).tap { init() })
+                }
+                C(x) {
+                    assert x.toString() == 'A(42)'
+                }
+            }
+            new C()
+        '''
+    }
+
+    @Test
+    void testWithExpressionAsSpecialConstructorArgument1() {
+        assertScript '''
+            @groovy.transform.ToString
+            class A {
+                A(x) {}
+                def b
+            }
