+
+    @Test
+    void testCallStaticMethodInThisConstructor() {
+        assertScript '''
+            class A {
+                static String f = '123'
+                static String g() { 'abc' }
+                A() {
+                    this(g() + getF())
+                }
+                A(a) { assert a == 'abc123' }
+            }
+
+            new A()
+        '''
+    }
+
