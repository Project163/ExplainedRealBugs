+                static String g() { 'abc' }
+                A() {
+                    this({ -> g() + getF()})
+                }
+                A(a) { assert a() == 'abc123' }
+            }
+
+            new A()
+        '''
+    }
+
+    @Test
+    void testCallStaticMethodInClosureParamOfSuperConstructor() {
+        assertScript '''
+            class A {
+                A(a) { assert a() == 'abc123' }
+            }
+
+            class B extends A {
+                static String f = '123'
+                static String g() { 'abc' }
+                B() {
+                    super({ -> g() + getF() })
+                }
+            }
+
+            new B()
+        '''
+    }
+
