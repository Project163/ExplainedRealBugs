+
+class Groovy9770 extends GroovyTestCase {
+    void testLambdaClassModifiers() {
+        assertScript '''
+            @groovy.transform.CompileStatic
+            class Foo {
+                def bar(String arg) {
+                    java.util.function.Function<String, String> up = (String s) -> { s.toUpperCase() }
