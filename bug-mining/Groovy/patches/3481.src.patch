+class Groovy8816Bug extends GroovyTestCase {
+    void testCallNoArgClosureWithArg() {
+        def msg = shouldFail MissingMethodException, '''
+        import groovy.transform.CompileStatic
+
+        @CompileStatic
+        void main() {
+            [0].each { -> }
+        }
