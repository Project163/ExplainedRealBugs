+class Groovy8549Bug extends CompilableTestSupport {
+    void testNumberWithVarSlotLoader() {
+        assertScript """
+            import groovy.transform.CompileStatic
+
+            @CompileStatic
+            def method() {
+                def list = [0, 1, 2, 3]
+                for (idx in 1..2) {
+                    list[idx-1]++
+                }
+                list
+            }
+
+            assert method() == [1, 2, 2, 3]
+        """
+    }
