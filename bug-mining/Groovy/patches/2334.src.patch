+        if (matcher.find()) {
+            matcher.reset();
+            StringBuffer sb = new StringBuffer();
+            while (matcher.find()) {
+                String tagName = matcher.group(1);
+                String tagBody = matcher.group(2);
+                String encodedBody = encodeAngleBrackets(tagBody);
