+    void testStaticPropertyBug() {
+        assertScript '''
+            trait SomeTrait {
+                private static String someString
+
+                static String getStringValue() {
+                    if(someString == null) {
+                        someString = 'Default Value'
+                    }
+                    someString
+                }
+
