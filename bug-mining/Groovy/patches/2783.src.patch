+                    if(this.someString == null) {
+                        someString = 'Default Value'
+                    }
+                    this.someString
+                }
+            }
+            class SomeClass implements SomeTrait {}
+
+            assert 'Default Value' == SomeClass.stringValue
+            assert 'Default Value' == SomeClass.stringValueUsingThis
+        '''
+    }
