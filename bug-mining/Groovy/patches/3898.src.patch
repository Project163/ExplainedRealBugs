+
+class Groovy9706 extends GroovyTestCase {
+    void testVarargsPrimitive() {
+        assertScript '''
+            @groovy.transform.TypeChecked
+            class Foo {
+                private vfunc(String s, int... ints) {
+                    "$s ${ints[0]}"
+                }
+                String caller() {
