+package groovy.json.internal
+
+class LazyMapTest extends GroovyTestCase {
+    // GROOVY-7302
+    void testSizeWhenNoBackingMapCreated() {
+        def map = new LazyMap()
+        map.someProperty = "1"
+        map.someProperty = "2"
+        map.someProperty = "3"
+        assert map.size() == 1
+        map.someProperty2 = "4"
+        assert map.size() == 2
+    }
+
