+        def map = new LazyMap()
+        map.someProperty1 = '1'
+        assert map.@map==null
+        map.someProperty2 = '2'
+        assert map.@map==null
+        map.someProperty3 = '3'
+        assert map.@map==null
+        map.someProperty4 = '4'
+        assert map.@map==null
+        map.someProperty5 = '5'
+        assert map.@map==null
+        map.someProperty6 = '6'
+        assert map.@map==null
+        map.someProperty7 = '7'
+        assert map.someProperty6 == '6'
+        assert map.@map?.size() == 7
