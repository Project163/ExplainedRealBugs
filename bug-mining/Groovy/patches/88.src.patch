+    
+    void testBug() {
+    	out = new StringWriter()
+    	out << "hello " << "world!"
+    	
+    	value = out.toString()
+    	assert value == "hello world!"
+    	
+    	out = new ByteArrayOutputStream()
+    	out << "hello " << "world!"
+
+		value = new String(out.toByteArray())
+		assert value == "hello world!"
+    	    	
+    	System.out << "hello" << " world!"
+    }
