+    void testDelegateMethodsWithDefaultValues() {
+        assertScript """
+            class Del4516 {
+                def doSomething(boolean flag = true) { 
+                    flag 
+                }
+            }
+            
+            class AClass4516 { 
+                @Delegate Del4516 Del4516 = new Del4516() 
