+			if (containsCapturingGroup(group)) {
+				// path ends with capturing group, e.g path == "/person/([0-9]+)"
+				capturingBuilder.put(path.substring(0, index+1), handlers.get(path));
+			} else {
+				// "normal" path, e.g. path == "/"
+				builder.put(path, handlers.get(path));
+			}
+		}
