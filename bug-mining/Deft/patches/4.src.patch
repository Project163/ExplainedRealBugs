+		RequestHandler rh1 = new RequestHandler1();
+		RequestHandler rh2 = new RequestHandler2();
+
+		assertTrue(rh1.isMethodAsynchronous(HttpVerb.GET));
+		
+		assertFalse(rh2.isMethodAsynchronous(HttpVerb.GET));
