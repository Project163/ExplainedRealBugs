+                psFontsDir = new File(driveLetter + ":" + File.separator + "PSFONTS");
+                if (psFontsDir.exists() && psFontsDir.canRead())
+                {
+                    fontDirList.add(psFontsDir);
+                    break;
+                }
+            }
+        }
+        return fontDirList;
+    }
