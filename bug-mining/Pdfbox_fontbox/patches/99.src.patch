+            while (value > -1)
+            {
+                value = dataStream.read();
+            }
+        }
+        catch (ArrayIndexOutOfBoundsException exception)
+        {
+            fail("EOF not detected!");
+        }
+        finally
+        {
+            if (dataStream != null)
+            {
+                dataStream.close();
+            }
+        }
+    }
